<div class="min-h-screen bg-base-200">
  <!-- Hero Section -->
  <div class="hero min-h-[60vh] bg-base-100">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold"><%= t(".hero_title") %></h1>
        <p class="py-6"><%= t(".hero_subtitle") %></p>
        <%= link_to t(".start_button"), nasa_game_root_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <div class="container mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold text-center mb-12"><%= t(".games_title") %></h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- NASA Game Card -->
      <%= link_to nasa_game_root_path, class: "card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow" do %>
        <figure class="px-10 pt-10">
          <div class="bg-primary/20 rounded-xl w-full h-32 flex items-center justify-center">
            <span class="text-6xl">üåô</span>
          </div>
        </figure>
        <div class="card-body items-center text-center">
          <h2 class="card-title"><%= t("nasa_game.common.game_name") %></h2>
          <p><%= t(".nasa_game_description") %></p>
          <div class="card-actions">
            <span class="btn btn-primary"><%= t(".play_button") %></span>
          </div>
        </div>
      <% end %>

      <!-- Card 2 -->
      <div class="card bg-base-100 shadow-xl">
        <figure class="px-10 pt-10">
          <div class="bg-secondary/20 rounded-xl w-full h-32 flex items-center justify-center">
            <span class="text-6xl">üé≤</span>
          </div>
        </figure>
        <div class="card-body items-center text-center">
          <h2 class="card-title"><%= t(".coming_soon") %></h2>
          <p><%= t(".coming_soon_description") %></p>
          <div class="card-actions">
            <button class="btn btn-secondary btn-disabled"><%= t(".coming_soon_button") %></button>
          </div>
        </div>
      </div>

      <!-- Card 3 -->
      <div class="card bg-base-100 shadow-xl">
        <figure class="px-10 pt-10">
          <div class="bg-accent/20 rounded-xl w-full h-32 flex items-center justify-center">
            <span class="text-6xl">üèÜ</span>
          </div>
        </figure>
        <div class="card-body items-center text-center">
          <h2 class="card-title"><%= t(".coming_soon") %></h2>
          <p><%= t(".coming_soon_description") %></p>
          <div class="card-actions">
            <button class="btn btn-accent btn-disabled"><%= t(".coming_soon_button") %></button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="footer footer-center p-10 bg-base-300 text-base-content">
    <aside>
      <p class="font-bold"><%= t(".hero_title") %></p>
      <p><%= t(".footer_description") %></p>
    </aside>
  </footer>
</div>
